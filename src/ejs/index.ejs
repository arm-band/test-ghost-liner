<%- include('partial/_util') %>
<%
    parameters = {
        title: 'Ghost Liner',
        description: 'ピリオド終わり以外の改行を削除してテキストを整える。制御文字、ゼロ幅スペース(zwsp)、ノーブレークスペース(nbsp)の削除も行います。',
        errFlag: false
    }
-%>
<%- include('partial/_head', { parameters }) %>
<body>
<%- include('partial/_header') %>
<main class="l-main">
    <section class="container py-5">
        <h1><i class="fas fa-fw fa-long-arrow-alt-up mr-2" aria-hidden="true"></i><%= parameters.title %><small class="ml-2" id="hello"></small></h1>
        <p><%= parameters.description %></p>
        <div class="row">
            <div class="col-12 col-md-6">
                <h3 class="mb-3">原文</h3>
                <textarea id="origin"></textarea>
            </div>
            <div class="col-12 col-md-6">
                <h3 class="mb-3">変換後</h3>
                <textarea id="converted"></textarea>
            </div>
        </div>
    </section>
</main>
<%- include('partial/_footer') %>
<%- include('partial/_js_loader') %>
</body>
</html>